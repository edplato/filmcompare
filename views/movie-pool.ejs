<%- include('partials/header.ejs'); %>

<% if(movies) { %>
<div class="row">
	 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	 	<ul class="list-group">
	 	<% movies.forEach(function(movie) { %>
	 		<li class="list-group-item">

	 			
	 			<h3><%= movie.movieId[0].detailBody.Title %></h3>
	 			<strong><%= movie.movieId[0].detailBody.imdbID %></strong>
	 			<p><%= movie.movieId[0].detailBody.Plot %></p>
	 			<p><%= movie.movieId[0].detailBody.tomatoMeter %></p>
	 			
	 			<div class="btn-group">
	 				<button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>	
	 				<ul class="dropdown-menu">
	 					<li><a href="#">Reduce by 1</a></li>
	 					<li><a href="#">Remove Item</a></li>
	 				</ul>
	 			</div>
	 		</li>
	 		<% }); %>
	 	</ul>
	 </div>
</div>
<div class="row">
	 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	 	<img src=""/>
	 </div>
</div>
<hr>
<div class="row">
	 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	 	<a href="/checkout" type="button" class="btn btn-success">Checkout</a>
	 </div>
</div>



<%	} else { %>
<div class="row">
	 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	 	<h2>No Items In Cart</h2>
	 </div>
</div>

<%	}; %>


<%- include('partials/footer.ejs'); %>