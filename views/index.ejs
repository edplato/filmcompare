<%- include('partials/header.ejs'); %>

<div class="container mainContainer">
<div class="row searchBar">
  <div>
  <h1 class="mainTitle">Welcome to <%= title %></h1>

  <form action="/results" method="get">
  <div class="form-group">
  <div class="input-group">
      
